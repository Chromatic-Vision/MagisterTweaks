{
  "manifest_version": 3,
  "name": "MagisterTweaks",
  "version": "0.0.1",
  "description": "Useful tweaks for *.magister.net",
  "permissions": ["activeTab", "storage", "declarativeNetRequestWithHostAccess"],
  "content_scripts": [
    {
      "matches": ["*://*.magister.net/*"],
      "js": ["contentScript.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}